<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ajouter.AjouterFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="-150dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/ajouter_exploitation"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnExpExistant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/exploitant_d_j_existant" />

        <Button
            android:id="@+id/btnExpNonExistant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/exploitant_non_existant" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>